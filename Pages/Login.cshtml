@page
@model MakebA_Inven_System.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-form">
        <h2 class="text-center mb-4">Login</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.Message.Contains("successful") ? "alert-success" : "alert-danger") text-center">
                @Model.Message
            </div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                <a href="/Register" class="btn btn-secondary w-100">Register</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* พื้นหลัง */
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #0d1117, #161b22);
        font-family: Arial, sans-serif;
        color: #e0e0e0;
    }

    /* คอนเทนเนอร์ */
    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 15px;
    }

    /* ฟอร์ม */
    .login-form {
        padding: 30px;
        border-radius: 12px;
        background: #1c1f26;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.6);
        color: #e0e0e0;
    }

        .login-form h2 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #58a6ff;
        }

    /* ช่องกรอกข้อมูล */
    .form-control {
        border: 1px solid #333;
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
        background: #0d1117;
        color: #e0e0e0;
    }

        .form-control::placeholder {
            color: #6c757d;
        }

        .form-control:focus {
            border-color: #58a6ff;
            box-shadow: 0 0 8px rgba(88, 166, 255, 0.4);
        }

    /* ปุ่ม */
    .btn-primary {
        background-color: #58a6ff;
        border: none;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px;
        transition: all 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #3178c6;
        }

    .btn-secondary {
        background-color: #333;
        border: none;
        font-size: 1rem;
        border-radius: 8px;
        padding: 10px;
        transition: all 0.3s ease;
        color: #e0e0e0;
    }

        .btn-secondary:hover {
            background-color: #444;
        }

    /* ข้อความแจ้งเตือน */
    .alert {
        font-size: 0.95rem;
        margin-bottom: 20px;
    }

    /* ข้อความสีแดง */
    .text-danger {
        font-size: 0.875rem;
    }
</style>
