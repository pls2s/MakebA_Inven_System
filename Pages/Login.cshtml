@page
@model MakebA_Inven_System.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-form">
        <h2 class="text-center">Login</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.Message.Contains("successful") ? "alert-success" : "alert-danger") text-center">
                @Model.Message
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn-primary">Login</button>
                <a href="/Index" class="btn-secondary">Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* General Styling */
    /* General Styling */
    body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #2a4365, #4c678f);
        font-family: 'Arial', sans-serif;
    }

    /* Container for login form */
    .login-container {
        width: 100%;
        max-width: 500px; /* Adjust the width of the form */
        padding: 20px;
        box-sizing: border-box;
    }

    .login-form {
        background: #1e293b;
        color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        /* Form Header */
        .login-form h2 {
            font-size: 1.8rem;
            text-align: center;
            margin-bottom: 20px;
            color: #58a6ff;
            border-bottom: 1px solid #374151;
            padding-bottom: 10px;
        }

    /* Form Fields */
    .form-control {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 6px;
        background: #374151;
        color: #f8f9fa;
        font-size: 1rem;
        box-sizing: border-box; /* Make sure the box model is correct */
    }

        .form-control:focus {
            outline: none;
            background: #425066;
            box-shadow: 0 0 6px rgba(59, 130, 246, 0.5);
        }

    /* Form Labels */
    .form-label {
        font-size: 0.9rem;
        color: #a0aec0;
        margin-bottom: 5px;
    }

    /* Buttons */
    .btn-primary {
        flex: 1;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        background: #58a6ff;
        color: #ffffff;
        font-weight: bold;
        text-align: center;
        transition: background 0.3s ease, transform 0.2s ease;
        cursor: pointer;
    }

        .btn-primary:hover {
            background: #357abd;
            transform: scale(1.05);
        }

    .btn-secondary {
        flex: 1;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        background: #718096;
        color: #ffffff;
        font-weight: bold;
        text-align: center;
        transition: background 0.3s ease, transform 0.2s ease;
        cursor: pointer;
    }

        .btn-secondary:hover {
            background: #4a5568;
            transform: scale(1.05);
        }

    /* Alert Message */
    .alert {
        padding: 10px;
        border-radius: 6px;
        font-size: 0.95rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .alert-success {
        background: #38a169;
        color: #ffffff;
    }

    .alert-danger {
        background: #e53e3e;
        color: #ffffff;
    }

    /* Validation Errors */
    .text-danger {
        font-size: 0.85rem;
        color: #e53e3e;
    }

</style>
