@page
@model MakebA_Inven_System.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-form">
        <h2 class="text-center mb-4 text-primary">Login</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.Message.Contains("successful") ? "alert-success" : "alert-danger") text-center">
                @Model.Message
            </div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                <a href="/Index" class="btn btn-secondary w-100">Close</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* พื้นหลัง */
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #283e51, #4b79a1);
        font-family: Arial, sans-serif;
        color: #333;
    }

    /* คอนเทนเนอร์ */
    .login-container {
        width: 100%;
        max-width: 500px;
        padding: 15px;
    }

    /* ฟอร์ม */
    .login-form {
        padding: 30px;
        border-radius: 12px;
        background: #f8f9fa;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        color: #333;
    }

        .login-form h2 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #0056b3;
        }

    /* ช่องกรอกข้อมูล */
    .form-control {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        background: #ffffff;
        color: #333;
    }

        .form-control::placeholder {
            color: #888;
        }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 8px rgba(0, 86, 179, 0.3);
        }

    /* ปุ่ม */
    .btn-primary {
        background-color: #0056b3;
        border: none;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 8px;
        padding: 12px;
        transition: all 0.3s ease;
        color: #ffffff;
    }

        .btn-primary:hover {
            background-color: #003f7f;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        font-size: 1rem;
        border-radius: 8px;
        padding: 12px;
        transition: all 0.3s ease;
        color: #ffffff;
    }

        .btn-secondary:hover {
            background-color: #565e64;
        }

    /* ข้อความแจ้งเตือน */
    .alert {
        font-size: 0.95rem;
        margin-bottom: 20px;
    }

    /* ข้อความสีแดง */
    .text-danger {
        font-size: 0.875rem;
    }
</style>
