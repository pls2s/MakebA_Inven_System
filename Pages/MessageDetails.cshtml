@page "/MessageDetails"
@model MakebA_Inven_System.Pages.MessageDetailsModel
@{
    ViewData["Title"] = "Message Details";
}

<div class="details-container">
    <div class="header">
        <h2>Message Details</h2>
    </div>

    @if (Model.Message != null)
    {
        <div class="message-details">
            <p><strong>From:</strong> @Model.Message.Sender</p>
            <p><strong>To:</strong> @Model.Message.Recipient</p>
            <p><strong>Subject:</strong> @Model.Message.Subject</p>
            <p><strong>Date:</strong> @Model.Message.Timestamp.ToString("dd MMM yyyy, HH:mm")</p>
            <hr />
            <p><strong>Message:</strong></p>
            <p>@Model.Message.Body</p>
        </div>

        <div class="actions">
            <button class="delete-button" onclick="confirmDelete(@Model.Message.EmailID)">Delete</button>
            <a href="/Reply?replyTo=@Model.Message.Sender&subject=RE: @Model.Message.Subject" class="reply-button">Reply</a>
            <a href="/Inbox" class="back-button">Back to Inbox</a>
        </div>
    }
    else
    {
        <p class="error-message">Message not found.</p>
    }
</div>

<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this message?")) {
            fetch(`/MessageDetails/Delete/${id}`, { method: "DELETE" })
                .then(response => {
                    if (response.ok) {
                        alert("Message deleted successfully!");
                        window.location.href = "/Inbox";
                    } else {
                        alert("Failed to delete the message.");
                    }
                })
                .catch(err => console.error(err));
        }
    }
</script>

<style>
    /* General Styling */
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #2a4365, #1e293b);
        color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .details-container {
        max-width: 900px; /* Increased width for better visibility */
        margin: 50px auto;
        background: #2d3748;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        animation: fadeIn 0.3s ease-in-out;
    }

    .header h2 {
        color: #58a6ff;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2rem;
        border-bottom: 1px solid #3b4252;
        padding-bottom: 10px;
    }

    .message-details p {
        font-size: 1rem;
        margin: 10px 0;
        color: #e0e0e0;
    }

    hr {
        border: 0;
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 20px 0;
    }

    .actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .error-message {
        text-align: center;
        color: #ff6b6b;
        font-size: 1.2rem;
    }

    /* Button Styling */
    .delete-button, .reply-button, .back-button {
        padding: 12px 30px;
        font-size: 1rem;
        border: none;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .delete-button {
        background: #ff6b6b;
        color: #fff;
    }

        .delete-button:hover {
            background: #e63939;
            transform: scale(1.05);
        }

    .reply-button {
        background: #58a6ff;
        color: #fff;
    }

        .reply-button:hover {
            background: #357abd;
            transform: scale(1.05);
        }

    .back-button {
        background: #a0aec0;
        color: #1e293b;
    }

        .back-button:hover {
            background: #718096;
            transform: scale(1.05);
        }

    /* Fade-in Animation */
   
</style>
