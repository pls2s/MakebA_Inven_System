@page
@model MakebA_Inven_System.Pages.SentModel
@{
    ViewData["Title"] = "Sent";
}

<div class="inbox-container">
    <!-- Sidebar Menu -->
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Inbox">Inbox</a></li>
            <li><a href="/Compose">Compose</a></li>
            <li><a href="/Sent" class="active">Sent</a></li>
            <li><a href="/Profile">Profile</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="content">
        <div class="header">
            <h2>Your Sent Messages</h2>
            <p>Below are the messages you've sent:</p>
        </div>

        <!-- Sent Message Cards -->
        <div class="messages">
            @if (Model.SentMessages.Any())
            {
                @foreach (var message in Model.SentMessages)
                {
                    <div class="message-card">
                        <div class="message-header">
                            <h4>@message.Subject</h4>
                            <span class="badge badge-sent">Sent</span>
                        </div>
                        <div class="message-body">
                            <p><strong>To:</strong> @message.Recipient</p>
                            <p><strong>Date:</strong> @message.Timestamp.ToString("dd MMM yyyy, HH:mm")</p>
                            <p><strong>Message:</strong> @message.Body.Substring(0, Math.Min(100, message.Body.Length))...</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="no-messages">You have no sent messages.</p>
            }
        </div>
    </div>
</div>

<style>
    /* General Styles */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #1e293b, #24324e);
        color: #e0e0e0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .inbox-container {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background: #2d3748;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        margin: 0 auto;
    }

    .sidebar {
        width: 300px;
        background: #1e293b;
        padding: 20px;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

        .sidebar h3 {
            color: #58a6ff;
            text-align: center;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar ul li {
                margin: 10px 0;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #e0e0e0;
                    display: block;
                    padding: 10px 15px;
                    border-radius: 6px;
                    transition: background 0.3s, color 0.3s;
                }

                    .sidebar ul li a:hover,
                    .sidebar ul li a.active {
                        background: #58a6ff;
                        color: #ffffff;
                    }

    .content {
        flex: 1;
        padding: 30px;
    }

    .header h2 {
        font-size: 2rem;
        color: #58a6ff;
    }

    .header p {
        font-size: 1.1rem;
        color: #a0aec0;
    }

    .messages {
        overflow-y: auto;
        max-height: 60vh;
        padding-right: 10px;
    }

        .messages::-webkit-scrollbar {
            width: 8px;
        }

        .messages::-webkit-scrollbar-thumb {
            background: #58a6ff;
            border-radius: 4px;
        }

            .messages::-webkit-scrollbar-thumb:hover {
                background: #357abd;
            }

    .message-card {
        background: #1c2025;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 10px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .message-card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

    .message-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .message-header h4 {
            font-size: 1.3rem;
            color: #58a6ff;
            margin: 0;
        }

    .badge {
        font-size: 0.9rem;
        padding: 5px 10px;
        border-radius: 8px;
        color: #ffffff;
    }

    .badge-sent {
        background: #58a6ff;
    }

    .message-body p {
        font-size: 0.9rem;
        color: #e0e0e0;
        margin: 5px 0;
    }

    .no-messages {
        font-size: 1.2rem;
        color: #a0aec0;
        text-align: center;
        margin: 20px 0;
    }
</style>
