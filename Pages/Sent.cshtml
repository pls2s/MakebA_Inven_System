@page
@model MakebA_Inven_System.Pages.SentModel
@{
    ViewData["Title"] = "Sent";
}

<div class="inbox-container">
    <!-- Sidebar Menu -->
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Inbox">Inbox</a></li>
            <li><a href="/Compose">Compose</a></li>
            <li><a href="/Sent" class="active">Sent</a></li>
            <li><a href="/Profile">Profile</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="content">
        <div class="header">
            <h2>Your Sent Messages</h2>
            <p>Below are the messages you've sent:</p>
        </div>

        <!-- Sent Message Cards -->
        <div class="messages">
            @if (Model.SentMessages.Any())
            {
                @foreach (var message in Model.SentMessages)
                {
                    <a href="/SentMessageDetails?emailId=@message.EmailID" class="message-link">
                        <div class="message-card">
                            <div class="message-body">
                                <p><strong>Subject:</strong> @message.Subject</p>
                                <p><strong>To:</strong> @message.Recipient</p>
                                <p><strong>Date:</strong> @message.Timestamp.ToString("dd MMM yyyy, HH:mm")</p>
                            </div>
                        </div>
                    </a>
                }
            }
            else
            {
                <p class="no-messages">You have no sent messages.</p>
            }
        </div>
    </div>
</div>

<script>
    function confirmDelete(emailID) {
        if (confirm("Are you sure you want to delete this message?")) {
            fetch(`/Sent/Delete/${emailID}`, { method: "DELETE" })
                .then(response => {
                    if (response.ok) {
                        alert("Message deleted successfully!");
                        window.location.reload();
                    } else {
                        alert("Failed to delete the message.");
                    }
                })
                .catch(err => console.error(err));
        }
    }
</script>

<style>
    /* General Styling */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #2a4365, #1e293b);
        color: #f4f4f4;
    }

    .inbox-container {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background: #2d3748;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        margin: 20px auto;
    }

    .sidebar {
        width: 300px;
        background: #1e293b;
        padding: 20px;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

        .sidebar h3 {
            text-align: center;
            color: #58a6ff;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin: 10px 0;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #e0e0e0;
                    display: block;
                    padding: 10px 15px;
                    border-radius: 6px;
                    transition: background 0.3s, color 0.3s;
                }

                    .sidebar ul li a:hover,
                    .sidebar ul li a.active {
                        background: #58a6ff;
                        color: #ffffff;
                    }

    .content {
        flex: 1;
        padding: 30px;
        background: #1e293b;
    }

    .header h2 {
        font-size: 2rem;
        color: #58a6ff;
        margin-bottom: 10px;
    }

    .header p {
        font-size: 1.1rem;
        color: #a0aec0;
    }

    .messages {
        display: flex;
        flex-direction: column;
        gap: 15px;
        max-height: 500px;
        overflow-y: auto; /* Enable vertical scrolling */
        overflow-x: hidden; /* Disable horizontal scrolling */
    }

        .messages::-webkit-scrollbar {
            width: 8px;
        }

        .messages::-webkit-scrollbar-thumb {
            background: #58a6ff;
            border-radius: 10px;
        }

            .messages::-webkit-scrollbar-thumb:hover {
                background: #4299e1;
            }

    .message-link {
        text-decoration: none;
        color: inherit;
    }

    .message-card {
        background: #1c2025;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .message-card:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
            background: #23272e;
        }

    .message-body {
        margin-top: 10px;
    }

        .message-body p {
            margin: 5px 0;
            color: #e0e0e0;
        }

    .no-messages {
        text-align: center;
        font-size: 1.2rem;
        color: #a0aec0;
        margin-top: 20px;
    }
</style>
