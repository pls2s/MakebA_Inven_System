@page
@model MakebA_Inven_System.Pages.InboxModel
@{
    ViewData["Title"] = "Inbox";
}

<div class="inbox-container">
    <!-- Sidebar Menu -->
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Compose">Compose</a></li>
            <li><a href="/Sent">Sent</a></li>
            <li><a href="/Profile">Profile</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="content">
        <div class="header">
            <h2>Welcome to Your Inbox</h2>
            <p>Your latest updates and messages are below:</p>
        </div>

        <!-- Message Cards -->
        <div class="messages">
            @foreach (var message in Model.Messages)
            {
                <div class="message-card @(message.IsRead ? "read" : "unread")">
                    <div class="message-header">
                        <h4>@message.Subject</h4>
                        <span class="badge @(message.IsNew ? "badge-new" : message.IsRead ? "badge-read" : "badge-unread")">
                            @(message.IsNew ? "New" : message.IsRead ? "Viewed" : "Pending")
                        </span>
                    </div>
                    <div class="message-body">
                        <p><strong>From:</strong> @message.Sender</p>
                        <p><strong>Date:</strong> @message.Timestamp.ToString("dd MMM yyyy, HH:mm")</p>
                    </div>
                </div>
            }
        </div>

        <!-- Log Out Button -->
        <div class="logout">
            <a href="/Logout" class="btn btn-danger">Log Out</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* General Styles */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #1e293b, #293648);
        color: #e0e0e0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .inbox-container {
        display: flex;
        max-width: 1200px;
        width: 100%;
        background: rgba(28, 33, 41, 0.9);
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    /* Sidebar Menu */
    .sidebar {
        width: 300px;
        background: #1e293b;
        padding: 20px;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

        .sidebar h3 {
            color: #58a6ff;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar ul li {
                margin: 15px 0;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #e0e0e0;
                    font-size: 1.1rem;
                    display: block;
                    padding: 10px;
                    border-radius: 8px;
                    transition: background 0.3s ease, color 0.3s ease;
                }

                    .sidebar ul li a:hover {
                        background: #58a6ff;
                        color: #ffffff;
                    }

    /* Main Content */
    .content {
        flex: 1;
        padding: 30px;
        color: #e0e0e0;
    }

    .header h2 {
        font-size: 2rem;
        color: #58a6ff;
    }

    .header p {
        margin: 10px 0 20px;
        font-size: 1.2rem;
        color: #a0aec0;
    }

    /* Messages Section */
    .messages {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .message-card {
        background: #2d3748;
        border-radius: 10px;
        padding: 20px;
        color: #e0e0e0;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .message-card:hover {
            transform: translateY(-5px);
        }

    .message-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .message-header h4 {
            margin: 0;
            font-size: 1.5rem;
            color: #58a6ff;
        }

    .badge {
        padding: 5px 10px;
        font-size: 0.9rem;
        border-radius: 12px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .badge-new {
        background: #58a6ff;
        color: #ffffff;
    }

    .badge-unread {
        background: #ecc94b;
        color: #2d3748;
    }

    .badge-read {
        background: #a0aec0;
        color: #2d3748;
    }

    .message-body p {
        margin: 10px 0;
    }

    /* Logout Button */
    .logout {
        margin-top: 30px;
        text-align: center;
    }

    .btn-danger {
        background: #e53e3e;
        color: #ffffff;
        padding: 10px 20px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s ease;
    }

        .btn-danger:hover {
            background: #c53030;
        }
</style>
