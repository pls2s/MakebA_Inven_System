@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-container">
    <div class="welcome-content text-center">
        <h1 class="display-4 fw-bold">Welcome to MakebA Inventory</h1>
        <p class="lead">Effortlessly manage your inventory with a modern platform.</p>
        <div class="mt-4">
            <a href="/Login" class="btn btn-primary btn-lg me-3">Login</a>
            <a href="/Register" class="btn btn-secondary btn-lg">Register</a>
        </div>
    </div>
</div>

<style>
    /* ตั้งค่าพื้นฐาน */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #1d3557, #457b9d); /* พื้นหลังแบบ Gradient */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* คอนเทนเนอร์หลัก */
    .welcome-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }

    /* คอนเทนเนอร์เนื้อหา */
    .welcome-content {
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

        .welcome-content h1 {
            color: #1d3557;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .welcome-content p {
            color: #555555;
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

    /* ปุ่ม */
    .btn-primary {
        background-color: #457b9d;
        color: #fff;
        border: none;
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1d3557;
        }

    .btn-secondary {
        background-color: transparent;
        color: #457b9d;
        border: 2px solid #457b9d;
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #457b9d;
            color: #fff;
        }
</style>
