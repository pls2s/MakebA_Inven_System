@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-container">
    <div class="welcome-content text-center">
        <h1 class="display-4 fw-bold">Welcome to MakebA Inventory</h1>
        <p class="lead">Effortlessly manage your inventory with a modern platform.</p>
        <div class="mt-4">
            <a href="/Login" class="btn btn-primary btn-lg me-3">Login</a>
            <a href="/Register" class="btn btn-secondary btn-lg">Register</a>
        </div>
    </div>
</div>

<style>
    /* ตั้งค่าพื้นฐาน */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #1e293b, #334155); /* พื้นหลังแบบ Gradient โทนเทา-น้ำเงิน */
        display: flex;
        justify-content: center;
        align-items: center;
        color: #e2e8f0; /* สีข้อความพื้นฐาน */
    }

    /* คอนเทนเนอร์หลัก */
    .welcome-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }

    /* คอนเทนเนอร์เนื้อหา */
    .welcome-content {
        background: #1e293b; /* พื้นหลังเข้มแบบกลมกลืน */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); /* เงาที่ชัดเจนขึ้น */
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

        .welcome-content h1 {
            color: #60a5fa; /* สีฟ้าสว่างสำหรับข้อความ */
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .welcome-content p {
            color: #cbd5e1; /* สีเทาสว่างสำหรับข้อความรอง */
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

    /* ปุ่ม */
    .btn-primary {
        background-color: #3b82f6; /* ฟ้าอ่อนที่ชัดเจน */
        color: #fff;
        border: none;
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2563eb; /* สีฟ้าเข้มเมื่อ Hover */
        }

    .btn-secondary {
        background-color: transparent;
        color: #3b82f6;
        border: 2px solid #3b82f6;
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #3b82f6;
            color: #fff;
        }
</style>
