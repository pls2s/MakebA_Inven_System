@page
@model MakebA_Inven_System.Pages.InboxModel
@{
    ViewData["Title"] = "Inbox";
}

<div class="inbox-container">
    <!-- Sidebar Menu -->
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Inbox" class="active">Inbox</a></li>
            <li><a href="/Compose">Compose</a></li>
            <li><a href="/Sent">Sent</a></li>
            <li><a href="/Profile">Profile</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="content">
        <div class="header">
            <h2>Your Inbox</h2>
            <p>Below are your recent messages:</p>
        </div>

        <div class="messages">
            @if (Model.Messages.Any())
            {
                @foreach (var message in Model.Messages)
                {
                    <div class="message-card">
                        <div class="message-header">
                            <h4>@message.Subject</h4>
                            <span class="badge badge-new">New</span>
                        </div>
                        <div class="message-body">
                            <p><strong>From:</strong> @message.Sender</p>
                            <p><strong>Date:</strong> @message.Timestamp.ToString("dd MMM yyyy, HH:mm")</p>
                            <p><strong>Message:</strong> @message.Body.Substring(0, Math.Min(100, message.Body.Length))...</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="no-messages">You have no messages in your inbox.</p>
            }
        </div>
    </div>
</div>
