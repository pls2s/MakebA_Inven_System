@page
@model MakebA_Inven_System.Pages.SentMessageDetailsModel
@{
    ViewData["Title"] = "Sent Message Details";
}

<div class="details-container">
    <div class="header">
        <h2>Message Details</h2>
    </div>

    @if (Model.Message != null)
    {
        <div class="message-details">
            <p><strong>To:</strong> @Model.Message.Recipient</p>
            <p><strong>Subject:</strong> @Model.Message.Subject</p>
            <p><strong>Date:</strong> @Model.Message.Timestamp.ToString("dd MMM yyyy, HH:mm")</p>
            <hr />
            <p><strong>Message:</strong></p>
            <p>@Model.Message.Body</p>
        </div>

        <div class="actions">
            <form method="post" asp-page-handler="Delete" id="delete-form" style="display:inline;">
                <input type="hidden" name="emailId" value="@Model.Message.EmailID" />
                <button type="button" class="delete-button" onclick="confirmDelete()">Delete</button>
            </form>
            <a href="/Sent" class="back-button">Back to Sent</a>
        </div>
    }
    else
    {
        <p class="error-message">Message not found.</p>
    }
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this message?")) {
            document.getElementById("delete-form").submit();
        }
    }
</script>

<style>
    .details-container {
        max-width: 900px;
        margin: 50px auto;
        background: #2d3748;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        animation: fadeIn 0.3s ease-in-out;
    }

    .header h2 {
        color: #58a6ff;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2rem;
        border-bottom: 1px solid #3b4252;
        padding-bottom: 10px;
    }

    .actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .delete-button {
        padding: 12px 30px;
        font-size: 1rem;
        border: none;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        background: #ff6b6b;
        color: #fff;
        transition: all 0.3s ease;
    }

        .delete-button:hover {
            background: #e63939;
            transform: scale(1.05);
        }

    .back-button {
        padding: 12px 30px;
        font-size: 1rem;
        border-radius: 8px;
        text-align: center;
        background: #58a6ff;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: #357abd;
            transform: scale(1.05);
        }
</style>
