@page
@model MakebA_Inven_System.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="inbox-container">
    <!-- Sidebar Menu -->
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Inbox">Inbox</a></li>
            <li><a href="/Compose">Compose</a></li>
            <li><a href="/Sent">Sent</a></li>
            <li><a href="/Profile" class="active">Profile</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="content">
        <div class="header">
            <h2>Your Profile</h2>
            <p>Below are your profile details:</p>
        </div>

        <!-- Profile Details Card -->
        <div class="profile-card">
            <div class="profile-section">
                <label for="username">Username:</label>
                <span>@Model.User.Username</span>
            </div>
            <div class="profile-section">
                <label for="email">Email:</label>
                <span>@Model.User.Email</span>
            </div>
            <div class="profile-section">
                <label for="role">Role:</label>
                <span>@Model.User.Role</span>
            </div>
            <div class="profile-section">
                <label for="joined">Date Joined:</label>
                <span>@Model.User.DateJoined.ToString("dd MMM yyyy")</span>
            </div>
        </div>

        <!-- Profile Actions -->
        <div class="profile-actions">
            <a href="/EditProfile" class="btn btn-primary">Edit Profile</a>
            <a href="/" class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Log Out</a>
            <form id="logout-form" action="/Logout" method="POST" style="display: none;"></form>
        </div>
    </div>
</div>

<style>
    /* General Styling */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #1e293b, #24324e);
        color: #e0e0e0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .inbox-container {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background: #2d3748;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .sidebar {
        width: 300px;
        background: #1e293b;
        padding: 20px;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

        .sidebar h3 {
            color: #58a6ff;
            text-align: center;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar ul li {
                margin: 10px 0;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #e0e0e0;
                    display: block;
                    padding: 10px 15px;
                    border-radius: 6px;
                    transition: background 0.3s, color 0.3s;
                }

                    .sidebar ul li a:hover,
                    .sidebar ul li a.active {
                        background: #58a6ff;
                        color: #ffffff;
                    }

    .content {
        flex: 1;
        padding: 30px;
    }

    .header h2 {
        font-size: 2rem;
        color: #58a6ff;
        margin-bottom: 10px;
    }

    .header p {
        font-size: 1.1rem;
        color: #a0aec0;
    }

    .profile-card {
        background: #1c2025;
        padding: 20px;
        border-radius: 12px;
        margin: 20px 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .profile-section {
        margin: 15px 0;
        font-size: 1.1rem;
    }

        .profile-section label {
            color: #58a6ff;
            font-weight: bold;
            display: inline-block;
            min-width: 140px;
        }

        .profile-section span {
            color: #e0e0e0;
        }

    .profile-actions {
        display: flex;
        justify-content: flex-start;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-primary {
        background: #58a6ff;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: #357abd;
        }

    .btn-danger {
        background: #e53e3e;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-danger:hover {
            background: #c53030;
        }
</style>
