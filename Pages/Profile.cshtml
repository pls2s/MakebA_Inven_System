@page
@model MakebA_Inven_System.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="inbox-container">
    <!-- Sidebar Menu -->
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Inbox" class="sidebar-link">Inbox</a></li>
            <li><a href="/Compose" class="sidebar-link">Compose</a></li>
            <li><a href="/Sent" class="sidebar-link">Sent</a></li>
            <li><a href="/Profile" class="sidebar-link active">Profile</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <div class="content">
        <div class="header">
            <h2>Your Profile</h2>
            <p>Below are your profile details:</p>
        </div>

        <!-- Profile Details Card -->
        <div class="message-card">
            <div class="profile-section">
                <label for="username">Username:</label>
                <span>@Model.Profile.Username</span>
            </div>
            <div class="profile-section">
                <label for="email">Email:</label>
                <span>@Model.Profile.Email</span>
            </div>
            <div class="profile-section">
                <label for="role">Role:</label>
                <span>@Model.Profile.Role</span>
            </div>
            <div class="profile-section">
                <label for="joined">Date Joined:</label>
                <span>@Model.Profile.DateJoined.ToString("dd MMM yyyy")</span>
            </div>
        </div>

        <!-- Profile Actions -->
        <div class="profile-actions">
            <a href="/EditProfile" class="btn btn-primary">Edit Profile</a>
            <a href="/" class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Log Out</a>
            <form id="logout-form" action="/Logout" method="POST" style="display: none;"></form>
        </div>
    </div>
</div>

<style>
    /* General Layout */
    .inbox-container {
        display: flex;
        max-width: 1200px;
        width: 90%;
        margin: auto;
        background: rgba(28, 33, 41, 0.95);
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    /* Sidebar Styling */
    .sidebar {
        width: 300px;
        background: #1e293b;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

        .sidebar h3 {
            color: #58a6ff;
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
            width: 100%;
        }

    .sidebar-link {
        display: block;
        text-decoration: none;
        color: #e0e0e0;
        font-size: 1.1rem;
        padding: 10px 15px;
        border-radius: 8px;
        text-align: center;
        transition: background 0.3s ease, color 0.3s ease;
    }

        .sidebar-link:hover,
        .sidebar-link.active {
            background: #58a6ff;
            color: #ffffff;
        }

    /* Content Styling */
    .content {
        flex: 1;
        padding: 40px;
        margin: auto;
    }

    .header h2 {
        font-size: 2rem;
        color: #58a6ff;
        text-align: center;
    }

    .header p {
        font-size: 1rem;
        color: #a0aec0;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Profile Details Styling */
    .message-card {
        background: #1c2025;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
        font-size: 1.1rem;
    }

    .profile-section {
        margin: 15px 0;
        display: flex;
        justify-content: space-between;
    }

        .profile-section label {
            color: #58a6ff;
            font-weight: bold;
        }

        .profile-section span {
            color: #e0e0e0;
        }

    /* Profile Action Buttons */
    .profile-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-primary {
        background-color: #58a6ff;
        color: #ffffff;
        border: none;
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #357abd;
        }

    .btn-danger {
        background-color: #e53e3e;
        color: #ffffff;
        border: none;
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-danger:hover {
            background-color: #c53030;
        }
</style>
