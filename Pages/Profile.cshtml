@page
@model MakebA_Inven_System.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="profile-container">
    <aside class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="/Inbox">Inbox</a></li>
            <li><a href="/Compose">Compose</a></li>
            <li><a href="/Sent">Sent</a></li>
            <li><a href="/Profile" class="active">Profile</a></li>
        </ul>
        <form method="post" asp-page-handler="Logout">
            <button class="btn-logout">Logout</button>
        </form>
    </aside>

    <div class="content">
        <div class="header">
            <h2>Your Profile</h2>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert">@Model.Message</div>
        }
        else
        {
            <div class="profile-details">
                <p><strong>First Name:</strong> @Model.UserProfile.FirstName</p>
                <p><strong>Last Name:</strong> @Model.UserProfile.LastName</p>
                <p><strong>Username:</strong> @Model.UserProfile.Username</p>
                <p><strong>Email:</strong> @Model.UserProfile.Email</p>
                <p><strong>Department:</strong> @Model.UserProfile.Department</p>
            </div>
        }
    </div>
</div>

<style>
    /* General Styling */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #1e293b, #24324e); /* Gradient Background */
        color: #f4f4f4;
    }

    .profile-container {
        display: flex;
        width: 90%;
        max-width: 1200px;
        background: #2d3748;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        margin: 20px auto;
    }

    /* Sidebar */
    .sidebar {
        width: 300px;
        background: #1e293b;
        padding: 20px;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

    .sidebar h3 {
        text-align: center;
        color: #58a6ff;
        margin-bottom: 20px;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar ul li {
        margin: 10px 0;
    }

    .sidebar ul li a {
        text-decoration: none;
        color: #e0e0e0;
        display: block;
        padding: 10px 15px;
        border-radius: 6px;
        transition: background 0.3s, color 0.3s;
    }

    .sidebar ul li a:hover,
    .sidebar ul li a.active {
        background: #58a6ff;
        color: #ffffff;
    }

    /* Logout Button */
    .btn-logout {
        margin-top: 20px;
        width: 100%;
        padding: 10px 15px;
        background: #e53e3e;
        color: #ffffff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .btn-logout:hover {
        background: #c53030;
    }

    /* Content */
    .content {
        flex: 1;
        padding: 30px;
    }

    .header h2 {
        font-size: 2rem;
        color: #58a6ff;
        margin-bottom: 20px;
    }

    .profile-details {
        background: #1c2025;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        color: #e0e0e0;
    }

    .profile-details p {
        font-size: 1rem;
        margin: 10px 0;
    }

    /* Alert Messages */
    .alert {
        background: #f8d7da;
        color: #721c24;
        padding: 10px 20px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-size: 1rem;
    }
</style>
